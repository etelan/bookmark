
<style>
  .center_pos {

  /* Gets pos of middle of the screen, no matter the size or scroll. */
  position: absolute;

  /* Set Margain */
  top: 50%;
  left: 50%;

  /* This moves the objects */
  transform: translate(-50%, -50%);
  }

  .center_text { text-align: center; }

  body, html {
   height: 100%;
 }
 .left_pos {

 /* Gets pos of middle of the screen, no matter the size or scroll. */
 position: absolute;

 /* Set Margain */
 top: 50%;
 left: 40%;

 /* This moves the objects */
 transform: translate(-50%, -50%);
 }

 .center_text { text-align: center; }

 body, html {
  height: 100%;
}

 .bg {
   /* The image used */
   background-image: url("images/cool-background.png");

   /* Set it to be background */
   z-index: -1;

   /* Full height */
   height: 100%;

   /* Center and scale the image nicely */
   background-position: center;
   background-repeat: no-repeat;
   background-size: cover;
 }

 .white { color:white}
 .gray { color:#C0C0C0 }

 .large { font-size:30px }

 .larger { font-size:56px }
 .largest { font-size:72px }

 .outline {
   -webkit-text-stroke-width: 2px;
   -webkit-text-stroke-color: black;
 }
 .outline_l {
   -webkit-text-stroke-width: 1px;
   -webkit-text-stroke-color: black;
 }

 .submissionfield { width: 200; height: 50px; padding: 5px; font-size: 18px;}
 .gray_bck { background-color: #C0C0C0 }

</style>



<div class="center_pos white">

  <!--TITLE-->
  <h1 class="largest center_text outline"> Bookmarks </h1>

  <!-- BULLET Bookmarks -->
  <ul class="large">

    <% @bookmarks.each do |bookmark| %>
        <li>
          <div style="display:inline-block">

            <!-- Line With Buttons -->
            <form class="center_text" action="/button-redirect" method="get">
              <label for="name">

                <%= bookmark.title %>

                <input type="hidden" name="title" value=<%= bookmark.title %>>
                <input type="submit" name="action" value="ðŸ—‘" >
                <input type="submit" name="action" value="ðŸŒŽ" >
              </label>
            </form>

          </div>
        </li>

    <% end %>

  </ul>

  <!-- FORM Add Bookmark -->
  <form class="center_text" action="/add-bookmark" method="post">

    <h1 class="white larger outline"> Title&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Link</h1>


    <!-- Buttons and labels -->
    <input type="text" class="gray_bck submissionfield" size=60 name="title" placeholder="Google">
    <input type="text" class="gray_bck submissionfield" size=60 name="bookmark" placeholder="http://www.google.com">

    <!-- Spacer -->
    <div>
      &nbsp;
    </div>
    <!-- Submit -->
    <div>
      <input type="submit" value="Add Bookmark" style="padding: 9px 11px; font-size:18px">
    </div>
  </form>

</div>

